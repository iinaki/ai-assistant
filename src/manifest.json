{
    "manifest_version": 3,
    "name": "Assistant",
    "version": "1.0",
    "description": "A simple AI-powered Chrome extension to help the disabled",
    "action": {
      "default_popup": "popup.html"
    },
    "permissions": [
      "tabs",
      "storage",
      "activeTab",  
      "scripting" 
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"], 
        "js": ["content.js"]       
      }
    ]
}
